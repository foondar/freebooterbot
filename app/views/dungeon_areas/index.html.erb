<p id="notice"><%= notice %></p>

<h1>Dungeon Areas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dungeon_areas.each do |dungeon_area| %>
      <tr>
        <td><%= link_to 'Show', dungeon_area %></td>
        <td><%= link_to 'Edit', edit_dungeon_area_path(dungeon_area) %></td>
        <td><%= link_to 'Destroy', dungeon_area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

